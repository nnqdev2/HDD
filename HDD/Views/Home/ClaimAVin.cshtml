<hr />

	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Claim a VIN/Plate</h2>
		</div>
	</div>

	<br /><br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ClaimAVin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" data-step="1" data-intro="Enter VIN.">
                <label asp-for="Vin" class="control-label textDetail"></label>
                <input asp-for="Vin" class="form-control" />
                <span asp-validation-for="Vin" class="text-danger"></span>
            </div>
            <div class="form-group" data-step="2" data-intro="Enter plate.">
                <label asp-for="Plate" class="control-label textDetail"></label>
                <input asp-for="Plate" class="form-control" />
                <span asp-validation-for="Plate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Claim VIN/Plate" class="btn btn-primary" />
                <span class="alert-danger textDetail">@ViewBag.messageerror</span>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="GetVins">Back to List</a>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
